<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tVhpo"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:text="Simplified: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tVanss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/ETx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.44"
        android:background="@drawable/roundedrect"
        android:ems="10"
        android:hint="Enter the Radical"
        android:inputType="number" />

    <Button
        android:id="@+id/bent"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:text="Simplified: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etNum"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/roundedrect"
        android:hint="Enter the Numerator"
        android:inputType="number" />

    <EditText
        android:id="@+id/etDen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/roundedrect"
        android:hint="Enter the Denominator"
        android:inputType="number" />

    <Button
        android:id="@+id/bentt"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/ent" />

    

</LinearLayout>