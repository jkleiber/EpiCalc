<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tVhpo"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:text="Slope: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tVans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/ETx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/roundedrect"
        android:hint="Enter the first X coordinate"
        android:inputType="number|numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/ETy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedrect"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:hint="Enter the first Y coordinate"
        android:inputType="number|numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/ETxx"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/roundedrect"
        android:ems="10"
        android:hint="Enter the second X coordinate"
        android:inputType="number|numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/ETyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/roundedrect"
        android:layout_weight="1"
        android:hint="Enter the second Y coordinate"
        android:layout_marginTop="5dp"
        android:inputType="number|numberDecimal|numberSigned" />

    <Button
        android:id="@+id/bent"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="@drawable/ent" />

</LinearLayout><!-- From: file:/C:/Users/Justin/Dropbox/Programming/Android/STUDIO/EpiCalc/app/src/main/res/layout/slope.xml -->